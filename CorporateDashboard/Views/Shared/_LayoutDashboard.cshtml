<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Corporate Dashboard</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@Url.Content("~/Content/Dashboard.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/json2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.signalr-0.5.0.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/knockout-2.1.0.js")" type="text/javascript"></script>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("INgage Dashboard", "Index", "Home")</p>
                </div>
                <div class="float-right" style="margin:20px 30px 0 0;">
                    <div id="weather" style="display: none">
                        <ul style="margin:0;padding:0;list-style-type: none;">
                            <li><img src="@Url.Content("~/images/Overcast.png")" style="height:1.4em;vertical-align: top" />&nbsp; Atlanta 85&deg; Cloudy</li>
                            <li><img src="@Url.Content("~/images/Sunny.png")" style="height:1.4em;vertical-align: top" />&nbsp; Naples 89&deg; Sunny</li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="copyright">&copy; @DateTime.Now.Year - INgage Networks.  All rights reserved.</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>
